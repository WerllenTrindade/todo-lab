{
  "cli": {
    "version": ">= 3.0.0",
     "appVersionSource": "local"
  },
  "build": {
    "preview": {
      "distribution": "internal",
      "autoIncrement": true,
      "android": {
        "autoIncrement": "versionCode",
        "buildType": "apk"
      }
    },
    "production": {
      "distribution": "store",
      "autoIncrement": true,
      "android": {
        "autoIncrement": "versionCode",
        "buildType": "app-bundle"
      }
    }
  },
  "submit": {
    "preview": {
      "android": {
        "track": "internal",
        "serviceAccountKeyPath": "./google-services.json",
        "releaseStatus": "draft"
      }
    }
  }
}
